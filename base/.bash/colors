#!/usr/bin/env bash

NULL=00

NORMAL=00
BRIGHT=01
UNDER=04

FG_BLACK=30
FG_RED=31
FG_GREEN=32
FG_YELLOW=33
FG_BLUE=34
FG_VIOLET=35
FG_CYAN=36
FG_WHITE=37

BG_BLACK=40
BG_RED=41
BG_GREEN=42
BG_YELLOW=43
BG_BLUE=44
BG_VIOLET=45
BG_CYAN=46
BG_WHITE=47

# ANSI Escape Commands
BEG="\[\033["
BEGF="\033["
END="m\]"
ENDF="m"

# The {}s aren't necessary. They aid in reading.

RESET="$BEG${NULL}$END"
RESETF="$BEGF${NULL}$ENDF"

BLACK="$BEG${NORMAL};${FG_BLACK}$END"
BLACKF="$BEGF${NORMAL};${FG_BLACK}$ENDF"
RED="$BEG${NORMAL};${FG_RED}$END"
REDF="$BEGF${NORMAL};${FG_RED}$ENDF"
GREEN="$BEG${NORMAL};${FG_GREEN}$END"
GREENF="$BEGF${NORMAL};${FG_GREEN}$ENDF"
YELLOW="$BEG${NORMAL};${FG_YELLOW}$END"
YELLOWF="$BEGF${NORMAL};${FG_YELLOW}$ENDF"
BLUE="$BEG${NORMAL};${FG_BLUE}$END"
BLUEF="$BEGF${NORMAL};${FG_BLUE}$ENDF"
VIOLET="$BEG${NORMAL};${FG_VIOLET}$END"
VIOLETF="$BEGF${NORMAL};${FG_VIOLET}$ENDF"
CYAN="$BEG${NORMAL};${FG_CYAN}$END"
CYANF="$BEGF${NORMAL};${FG_CYAN}$ENDF"
WHITE="$BEG${NORMAL};${FG_WHITE}$END"
WHITEF="$BEGF${NORMAL};${FG_WHITE}$ENDF"

BRIGHT_BLACK="$BEG${BRIGHT};${FG_BLACK}$END"
BRIGHT_BLACKF="$BEGF${BRIGHT};${FG_BLACK}$ENDF"
BRIGHT_RED="$BEG${BRIGHT};${FG_RED}$END"
BRIGHT_REDF="$BEGF${BRIGHT};${FG_RED}$ENDF"
BRIGHT_GREEN="$BEG${BRIGHT};${FG_GREEN}$END"
BRIGHT_GREENF="$BEGF${BRIGHT};${FG_GREEN}$ENDF"
BRIGHT_YELLOW="$BEG${BRIGHT};${FG_YELLOW}$END"
BRIGHT_YELLOWF="$BEGF${BRIGHT};${FG_YELLOW}$ENDF"
BRIGHT_BLUE="$BEG${BRIGHT};${FG_BLUE}$END"
BRIGHT_BLUEF="$BEGF${BRIGHT};${FG_BLUE}$ENDF"
BRIGHT_VIOLET="$BEG${BRIGHT};${FG_VIOLET}$END"
BRIGHT_VIOLETF="$BEGF${BRIGHT};${FG_VIOLET}$ENDF"
BRIGHT_CYAN="$BEG${BRIGHT};${FG_CYAN}$END"
BRIGHT_CYANF="$BEGF${BRIGHT};${FG_CYAN}$ENDF"
BRIGHT_WHITE="$BEG${BRIGHT};${FG_WHITE}$END"
BRIGHT_WHITEF="$BEGF${BRIGHT};${FG_WHITE}$ENDF"

UNDER_BLACK="$BEG${UNDER};${FG_BLACK}$END"
UNDER_BLACKF="$BEGF${UNDER};${FG_BLACK}$ENDF"
UNDER_RED="$BEG${UNDER};${FG_RED}$END"
UNDER_REDF="$BEGF${UNDER};${FG_RED}$ENDF"
UNDER_GREEN="$BEG${UNDER};${FG_GREEN}$END"
UNDER_GREENF="$BEGF${UNDER};${FG_GREEN}$ENDF"
UNDER_YELLOW="$BEG${UNDER};${FG_YELLOW}$END"
UNDER_YELLOWF="$BEGF${UNDER};${FG_YELLOW}$ENDF"
UNDER_BLUE="$BEG${UNDER};${FG_BLUE}$END"
UNDER_BLUEF="$BEGF${UNDER};${FG_BLUE}$ENDF"
UNDER_VIOLET="$BEG${UNDER};${FG_VIOLET}$END"
UNDER_VIOLETF="$BEGF${UNDER};${FG_VIOLET}$ENDF"
UNDER_CYAN="$BEG${UNDER};${FG_CYAN}$END"
UNDER_CYANF="$BEGF${UNDER};${FG_CYAN}$ENDF"
UNDER_WHITE="$BEG${UNDER};${FG_WHITE}$END"
UNDER_WHITEF="$BEGF${UNDER};${FG_WHITE}$ENDF"

BACK_BLACK="$BEG${BG_BLACK}$END"
BACK_BLACKF="$BEGF${BG_BLACK}$ENDF"
BACK_RED="$BEG${BG_RED}$END"
BACK_REDF="$BEGF${BG_RED}$ENDF"
BACK_GREEN="$BEG${BG_GREEN}$END"
BACK_GREENF="$BEGF${BG_GREEN}$ENDF"
BACK_YELLOW="$BEG${BG_YELLOW}$END"
BACK_YELLOWF="$BEGF${BG_YELLOW}$ENDF"
BACK_BLUE="$BEG${BG_BLUE}$END"
BACK_BLUEF="$BEGF${BG_BLUE}$ENDF"
BACK_VIOLET="$BEG${BG_VIOLET}$END"
BACK_VIOLETF="$BEGF${BG_VIOLET}$ENDF"
BACK_CYAN="$BEG${BG_CYAN}$END"
BACK_CYANF="$BEGF${BG_CYAN}$ENDF"
BACK_WHITE="$BEG${BG_WHITE}$END"
BACK_WHITEF="$BEGF${BG_WHITE}$ENDF"
